/* post_show.wxss */
@import "../../../other/wxParse/wxParse.wxss";
.post_show {
    padding: 10px;
    background-color: #f6f6f6;
    border-radius: 3px 3px 0 0;
}
.header_body{
        margin: 0 5px;
        border-bottom: 1px solid #838383;
}
.title{
    font-weight: 700;
    margin: 8px 0;
    display: inline-block;
    vertical-align: bottom;
    width: 75%;
    line-height: 130%;
}
.change{
    font-size: 12px;
    color: #838383;
}
.node{
    background: #369219;
    padding: 1px 2px;
    border-radius: 2px;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    -o-border-radius: 2px;
    color: #fff;
    font-size: 13px;
    margin-right: 10px;
}
page {
    background-color: #e1e1e1;
    font-family: "Helvetica Neue","Luxi Sans","DejaVu Sans",Tahoma,"Hiragino Sans GB",STHeiti!important;
}

.content {
    margin-bottom:20px;
    padding-right:10px;
    background:#fff;
    border-top:1px solid #f0f0f0;
    overflow:hidden;
    position:relative;
    padding:10px 0 10px 10px;
    font-size:14px;

}

.reply_list {
    padding-right: 10px;
    background: #fff;
    border-top: 1px solid #f0f0f0;
    overflow: hidden;
    position: relative;
    padding: 10px 0 10px 10px;
    font-size: 14px;
}

.author_avatar {
    height: 31px;
    width: 31px;
    border-radius: 3px;
    padding: -12px -12px;
    display: inline;
}

.author_info {
    margin-left: 10px;
    display: inline-block;
}

.image{
    width:30px;
    height:30px;
    border-radius:3px;
}

.post_body {
    clear: both;
    padding-left: 0;
    padding-top: 5px;
}

.reply_body{
        margin-top: 20px;
}

.floor{
    float: right;
    margin-right: 10px;
    margin-top: 10px;
    background: #f0f0f0;
}

.goto_counter {
    width: 80%;
    height:80%;
    margin:0 auto;    
    margin-top: 20px;
}

.page{
    margin-top: 20px; 
    border-radius: 4px;
}