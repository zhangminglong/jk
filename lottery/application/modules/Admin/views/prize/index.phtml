<script>
    $.hight_nav('<?php echo base_url('admin/prize/index');?>');
    $(function (e) {
        yboard.init();
    });
    function getFormData(obj, callBack) {
        var dataAction = obj.attr('data-action'), dataInfoUrl = obj.attr('data-info-url'), formData = {
            action: dataAction,
            info: {
                p_id: '',
                p_name: '',
                p_inventory: '',
                p_image_uri: '',
                p_probability: ''
            }
        };
        if (typeof (dataInfoUrl) != 'undefined' && dataInfoUrl != '') {
            var p_id = $($(yboard.config.tableId)).getListIds('p_id', true);
            if (!p_id) {
                return false;
            }
            $.get(dataInfoUrl, {p_id: p_id}, function (data) {
                if (data.code == 200) {
                    formData = {
                        action: dataAction,
                        info: {
                            p_id: data.data.p_id,
                            p_name: data.data.p_name,
                            p_inventory: data.data.p_inventory,
                            p_image_uri: data.data.p_image_uri,
                            p_probability: data.data.p_probability
                        }
                    };
                    callBack(formData);
                }
            }, 'json');
        } else {
            callBack(formData);
        }
    }
    function dialogShow() {
        $('input[type=file]').ace_file_input({
            no_file: '文件上传 ...',
            btn_choose: '选择',
            btn_change: '更改',
            droppable: false,
            onchange: null,
            thumbnail: false
        });
    }
</script>
