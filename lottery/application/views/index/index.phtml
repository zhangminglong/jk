<script>
    $(function (e) {
        yboard.init();
    });

    function optionFormatter(value) {
        return (value) ? '<a class="btn btn-white btn-purple btn-sm" href="<?php echo base_url('items');?>/' + value + '">进入项目</a>' : '';
    }

    function getFormData(obj, callBack) {
        var dataAction = obj.attr('data-action'), dataInfoUrl = obj.attr('data-info-url'), formData = {
            action: dataAction,
            info: {
                item_id: '',
                item_name: '',
                item_description: ''
            }
        };
        if (typeof (dataInfoUrl) != 'undefined' && dataInfoUrl != '') {
            var item_id = $($(yboard.config.tableId)).getListIds('item_id', true);
            if (!item_id) {
                return false;
            }
            $.get(dataInfoUrl, {item_id: item_id}, function (data) {
                if (data.code == 200) {
                    formData = {
                        action: dataAction,
                        info: {
                            item_id: data.data.item_id,
                            item_name: data.data.item_name,
                            item_description: data.data.item_description
                        }
                    };
                    callBack(formData);
                }
            }, 'json');
        } else {
            callBack(formData);
        }
    }

    function dialogShow() {
        return false;

    }
</script>
